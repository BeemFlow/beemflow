{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BeemFlow Flow Schema",
  "type": "object",
  "required": ["name", "on", "steps"],
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "on": {},
    "vars": { "type": "object" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "use"],
        "properties": {
          "id": {"type": "string"},
          "use": {"type": "string"},
          "with": {"type": "object"},
          "depends_on": {
            "type": "array",
            "items": {"type": "string"}
          },
          "parallel": {"type": "boolean"},
          "if": {"type": "string"},
          "foreach": {"type": "string"},
          "as": {"type": "string"},
          "do": {"type": "array", "items": {"$ref": "#/definitions/step"}},
          "retry": {"$ref": "#/definitions/retry"},
          "await_event": {"$ref": "#/definitions/await_event"},
          "wait": {"$ref": "#/definitions/wait"}
        }
      }
    },
    "catch": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "use": { "type": "string" },
          "with": { "type": "object" }
        },
        "required": ["use"]
      }
    }
  }
} 